{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "lib": ["dom", "es2020"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true, //no 'this' beyond the arrow function
    "alwaysStrict": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true, //return or break
    "resolveJsonModule": true, // import .json as module
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*", "src/types/*"] // module that starts with @ finds in ..
    },
    "rootDir": "./",
    "outDir": "dist",
    "composite": true, // better perfomance
    "incremental": true,
    "removeComments": true,
    "noEmitOnError": true,
    "importHelpers": true // avoid code duplication
  },
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "exclude": ["../node_modules", "dist"]
}
